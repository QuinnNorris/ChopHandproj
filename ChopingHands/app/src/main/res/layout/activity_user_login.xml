<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.quinnnorris.chopinghands.UserLoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/id_et_username"
        android:textAlignment="center"
        android:layout_above="@+id/id_et_password"
        android:layout_alignLeft="@+id/id_et_password"
        android:layout_alignStart="@+id/id_et_password"
        android:layout_marginBottom="32dp"
        android:textStyle="normal|bold"
        android:hint="P H O N E" />

    <Button
        android:text="SIGN UP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_btn_register"
        android:width="160dp"
        android:layout_alignBaseline="@+id/id_btn_login"
        android:layout_alignBottom="@+id/id_btn_login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="SIGN IN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id_btn_login"
        android:layout_marginTop="63dp"
        android:elevation="0dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:width="160dp"
        android:layout_below="@+id/id_et_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/id_et_password"
        android:hint="PASS WORD"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
